<ResourceDictionary
  xmlns="http://schemas.microsoft.com/client/2007"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:src="clr-namespace:ChronoPlurk.Views.PlurkControls">
    
    <Style TargetType="src:HtmlTextBox">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="src:HtmlTextBox">
                    <RichTextBox x:Name="RichTextBoxElement"
                                 IsReadOnly="True"
                                 TextWrapping="Wrap" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>
